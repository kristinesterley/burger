


<div id="left-side">
  <br>
  <br>
  <br>
  <h2>Uneaten Burgers!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Eat This One!</button>
          </form>

        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div id="center">
  <h1>Eat Da Burger!</h1>
  <img id="picture" src="/assets/img/hamburger.png" alt="hamburger">

  <h2>Add a Burger</h2>
  <form class="create-form" action="/" method="POST">

    <div class="form-group">
      <label for="bur">Burger Name:</label>
      <input type="text" id="bur" name="burger_name">
    </div>

    <button type="submit">Add </button>
  </form>
</div>


<div id="right-side">
  <br>
  <br>
  <br>
  <h2>Devoured Burgers!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Get a New One!</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>


